<div class='container'>
  <p id="notice"></p>
    <div class='row'>
      <div class='col-xs-3'>
        <h2>User info</h2>
          <table class='table'>
            <tr><%= attachment_image_tag @user, :profile_image, :fill,100,100,format: 'jpeg', class: " pull-left profile-img", fallback: "no_image.jpg" %></tr>
            <tr>
              <th>name</th>
              <th><%= @user.name %></th>
            </tr>
            <tr>
              <th>introduction</th>
              <th><%= @user.introduction %></th>
            </tr>
          </table>
          <div class='row'>
            <%= link_to "", edit_user_path(@user.id), class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench " %>
          </div>
            <h2>New book</h2>
              <%= form_for(@book, url: '/books') do |f| %>
                <h4>Title</h4>
              <%= f.text_field :title %>
                <h4>Opinion</h4>
              <%= f.text_area :body %>
              <%= f.submit 'Create Book',class: "btn btn-primary col-xs-12" %>
              <% end %>
            </div>
            <div class='col-xs-9'>
              <h1>Books</h1>
                <table class ="table">
                  <thead>
                    <tr>
                      <th></th>
                      <th>Title</th>
                      <th>Opinion</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% @user.books.each do |book| %>
                      <tr>
                        <td><%= attachment_image_tag book.user, :profile_image, :fill, 100, 100, format: 'jpeg', class: " pull-left profile-img", fallback: "no_image.jpg" %>
                        <td>
                          <%=link_to book.title,book_path(book) %></td>
                        <td><%= book.body %></td>
                      </tr>
                    <% end %>
                  </tbody>
                </table>
                <% if @book.errors.any? %>
                  <div class="alert alert-warning">
                    <h2><%= pluralize(@book.errors.count, "error") %>prohibited this book from being saved </h2>
                     <ul>
                        <% @book.errors.full_messages.each do |message| %>
                          <li><%= message %></li>
                        <% end %>
                      </ul>
                  </div>
                <% end %>
            </div>
      </div>
    </div>
</div>