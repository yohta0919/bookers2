              <h1>Users</h1>
                <table class = "table">
                  <thead>
                    <tr>
                      <th>image</th>
                      <th>name</th>
                      <th colspan="3"></th>
                    </tr>
                  </thead>
                <tbody>
                  <% @users.each do |user| %>
                    <tr>
                      <td><%= attachment_image_tag user, :profile_image, :fill, 100, 100, format: 'jpeg', class: " pull-left profile-img", fallback: "no_image.jpg" %>
                      <td><%= user.name %></td>
                      <td><%= link_to "Show", user_path(user.id) %></td>
                    </tr>
                  <% end %>
                </tbody>
                </table>
