<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
       <header class="navbar navbar-top navbar-inverse">
 <nav class="navbar navbar-inverse" style=" height: 60px;">
      <div class="navbar-header" >
        <h3 style="margin: 0px 30px; color: white;">Bookers</h3>
      </div>
      <div class="container-fluid">
        <nav class="collapse navbar-collapse" style="color: #808080;　line-height: 60px; ">
          <ul class="nav navbar-nav" style="float: right;">
          <% if user_signed_in? %>
            <li>
              <%= link_to user_path(current_user.id) do %>
                <span class="glyphicon glyphicon-home" aria-hidden="true"> Home</span>
              <% end %>
            </li>
            <li>
              <%= link_to users_path do %>
                <span class="glyphicon glyphicon-user" aria-hidden="true"> Users</span>
              <% end %>
            </li>
            <li>
              <%= link_to books_path do%>
                <span class="glyphicon glyphicon-book" aria-hidden="true"> Books</span>
              <% end %>
            </li>
            <li>
              <%= link_to destroy_user_session_path, method: :delete do%>
                <span class="glyphicon glyphicon-log-out" aria-hidden="true"> logout</span>
              <% end %>
            </li>

          <% else %>
            <li>
              <%= link_to root_path do%>
                <span class="glyphicon glyphicon-home" aria-hidden="true"> Home</span>
              <% end %>
            </li>
            <li>
              <%= link_to home_about_path do%>
                <span class="glyphicon glyphicon-link" aria-hidden="true">about</span>
              <% end %>
            </li>
            <li>
              <%= link_to new_user_registration_path do%>
                <span class="glyphicon glyphicon-edit" aria-hidden="true"> sign up</span>
              <% end %>
            </li>
            <li>
              <%= link_to new_user_session_path do%><span class="glyphicon glyphicon-log-in" aria-hidden="true">  login</span>
            <% end %>
            </li>
          <% end %> 
</header>
          <%if flash[:notice] %>
              <%= flash[:notice] %>
          <% end %>
    <%= yield %>
  </body>
</html>
